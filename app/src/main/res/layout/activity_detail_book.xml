<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="5dp"
    >
<android.support.v7.widget.CardView
    android:id="@+id/books_cardView_detail"
    card_view:cardCornerRadius="15dp"
    android:layout_height="wrap_content"
    android:layout_width="380dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:id="@+id/book_image_detail"
            android:layout_gravity="center_horizontal"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/book_likes"
                android:layout_gravity="center_vertical"
                android:id="@+id/books_likes_detail"
                android:textSize="50dp"/>

            <ImageView
                android:id="@+id/book_image_book_detail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:padding="4dp"
                android:src="@drawable/icons8_read_50" />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_detail"
        android:background="#EEEEEE"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        />

</LinearLayout>
